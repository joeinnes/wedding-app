include includes/head.pug
main(class="container p-12 flex-1")
  unless user
    h2.text-4xl.mb-3 #{enterEmail}
    input#email(type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4")
    a#submitlogin(class="px-3 py-2 mr-3 border border-" + env.colour + "-500 rounded hover:bg-" + env.colour + "-500 hover:text-white") #{submit}
    a#scancode(class="px-3 py-2 mr-3 border border-" + env.colour + "-500 rounded hover:bg-" + env.colour + "-500 hover:text-white") #{orScan}
  else
    h2.text-4xl.mb-3 #{alreadyLoggedIn}

